{% extends 'base.html.twig' %}

{% block title %}Tous les amis{% endblock %}

{% block body %}
    <h1> {{ friend.username }} </h1>
    
    <p>
        {{ friend.firstname | nl2br }} {{ friend.lastname }}
    </p>

    <p>
        <a class="btn btn-primary btn-sm" href="{{ path('friends.create', {id: friend.id}) }}">Cr√©er une quete</a>
    </p>

    <table class="table">
        <thead>
        <tr>
            <th>Titre</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for friend in friend %}    
            <tr>
                <td>
                    <a href="{{ path('/amis/{slug}-{id}', {id: friend.id, slug friend.slug}) }}">{{ friend.title }}</a>
                </td>
                <td>
                    <a class="btn btn-primary btn-sm" href="{{ path('friends.edit', {id: friend.id}) }}">Editer</a>
                </td>
            </tr>
            {% endfor %}
        </tbody>
{% endblock %}

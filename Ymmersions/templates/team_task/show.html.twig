{% extends 'base.html.twig' %}

{% block title %}TeamTask{% endblock %}

{% block body %}
    <h1>TeamTask</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Task_id</th>
                <td>{{ team_task.taskId }}</td>
            </tr>
            <tr>
                <th>DateCreate</th>
                <td>{{ team_task.dateCreate ? team_task.dateCreate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ team_task.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ team_task.description }}</td>
            </tr>
            <tr>
                <th>Difficult</th>
                <td>{{ team_task.difficult }}</td>
            </tr>
            <tr>
                <th>Point</th>
                <td>{{ team_task.point }}</td>
            </tr>
            <tr>
                <th>Color</th>
                <td>{{ team_task.color }}</td>
            </tr>
            <tr>
                <th>Periodicity</th>
                <td>{{ team_task.periodicity }}</td>
            </tr>
            <tr>
                <th>Target</th>
                <td>{{ team_task.target }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_team_task_index') }}">back to list</a>

    <a href="{{ path('app_team_task_edit', {'task_id': team_task.task_id}) }}">edit</a>


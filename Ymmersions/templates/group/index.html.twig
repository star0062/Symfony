{% block title %}{% endblock %}

{% block body %}
    <header>
        <div class="header-container">
            <h1>Liste des groupes</h1>
            <div class="nav-links">
                <a href="{{ path('group_create') }}" class="create-group-link">Créer un nouveau groupe</a>
                <a class="nav-link" href="{{ path('home') }}">Accueil</a>
                <a class="nav-link" href="{{ path('friends.index') }}">Amis</a>
                <a class="nav-link" href="{{ path('group_index') }}">Groupes</a>
                
                <!-- Lien de déconnexion ajouté -->
                <a class="nav-link" href="{{ path('app_logout') }}">Déconnexion</a>
            </div>
        </div>
    </header>

    {% if groups is not empty %}
        <ul class="group-list">
            {% for group in groups %}
                <li class="group-item">
                    <strong>{{ group.name }}</strong><br>
                    Score : {{ group.score }}<br>
                </li>
            {% endfor %}
        </ul>
    {% else %}
        <p>Aucun groupe trouvé.</p>
    {% endif %}

    <style>
        /* Général */
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f4f4f4;
            color: #333;
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        /* En-tête */
        header {
            background-color: #333;
            color: white;
            padding: 15px 30px;
            text-align: center;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        .header-container {
            display: flex;
            justify-content: space-between;
            align-items: center;
            flex-wrap: wrap;
        }

        h1 {
            font-size: 28px;
            margin: 0;
            color: #ffffff;
        }

        /* Liens de navigation */
        .nav-links {
            display: flex;
            gap: 15px;
            flex-wrap: wrap;
            justify-content: center;
        }

        .nav-link, .create-group-link {
            text-decoration: none;
            padding: 10px 20px;
            background-color: #4CAF50;
            color: white;
            border-radius: 5px;
            font-weight: bold;
            transition: background-color 0.3s, transform 0.2s;
            display: inline-block;
        }

        .nav-link:hover, .create-group-link:hover {
            background-color: #45a049;
            transform: translateY(-3px);
        }

        /* Lien pour créer un groupe */
        .create-group-link {
            background-color: #ffffff;
            color: #4CAF50;
            border: 2px solid #4CAF50;
        }

        /* Liste des groupes */
        .group-list {
            list-style-type: none;
            padding: 0;
            margin: 30px auto;
            width: 80%;
            display: flex;
            flex-direction: column;
            gap: 15px;
        }

        .group-item {
            background-color: #ffffff;
            padding: 20px;
            margin: 0;
            border-radius: 8px;
            border: 1px solid #ddd;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
        }

        .group-item strong {
            font-size: 1.2em;
            color: #4CAF50;
        }

        /* Message lorsqu'aucun groupe n'est trouvé */
        p {
            text-align: center;
            font-size: 1.2em;
            color: #888;
        }

        /* Responsive Design */
        @media (max-width: 768px) {
            .header-container {
                flex-direction: column;
                align-items: center;
            }

            h1 {
                font-size: 22px;
                margin-bottom: 10px;
            }

            .nav-links {
                flex-direction: column;
                align-items: center;
                gap: 10px;
            }

            .group-list {
                width: 90%;
            }
        }
    </style>
{% endblock %}

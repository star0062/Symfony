{% extends 'base.html.twig' %}

{% block title %}Dashboard{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1 class="mb-4">Dashboard</h1>

    <!-- Section Tâches -->
    <div class="card mb-4">
        <div class="card-header">Tâches</div>
        <div class="card-body">
            <ul>
                {% for task in tasks %}
                    <li>{{ task.name }} - {{ task.status }}</li>
                {% else %}
                    <li>Aucune tâche disponible.</li>
                {% endfor %}
            </ul>
        </div>
    </div>

    <!-- Section Équipes -->
    <div class="card mb-4">
        <div class="card-header">Équipes</div>
        <div class="card-body">
            <ul>
                {% for team in teams %}
                    <li>{{ team.name }} - {{ team.members|length }} membres</li>
                {% else %}
                    <li>Vous n'êtes dans aucune équipe.</li>
                {% endfor %}
            </ul>
        </div>
    </div>

    <!-- Section Invitations -->
    <div class="card mb-4">
        <div class="card-header">Invitations</div>
        <div class="card-body">
            <ul>
                {% for invitation in invitations %}
                    <li>Invitation de {{ invitation.sender.name }} pour rejoindre {{ invitation.team.name }}</li>
                {% else %}
                    <li>Aucune invitation en attente.</li>
                {% endfor %}
            </ul>
        </div>
    </div>

    <!-- Section Types de Tâches -->
    <div class="card mb-4">
        <div class="card-header">Types de Tâches</div>
        <div class="card-body">
            <ul>
                {% for type in task_types %}
                    <li>{{ type.name }}</li>
                {% else %}
                    <li>Aucun type de tâche défini.</li>
                {% endfor %}
            </ul>
        </div>
    </div>

    <!-- Section Types d'Équipes -->
    <div class="card mb-4">
        <div class="card-header">Types d'Équipes</div>
        <div class="card-body">
            <ul>
                {% for type in team_types %}
                    <li>{{ type.name }}</li>
                {% else %}
                    <li>Aucun type d'équipe défini.</li>
                {% endfor %}
            </ul>
        </div>
    </div>
</div>
{% endblock %}
